    <thead>
        <tr>
            <th>Nome</th>
            <th>Preco</th>
            <th>Selecionar</th>
        </tr>
    </thead>
<tbody>
    {{#each cursos}}
    <tr>
        <td>{{nome}}</td>
        <td>{{preco}}</td>
        <td><a href="#">Selecionar</a></td>
    </tr>
   {{/each}}
</tbody>
</table>